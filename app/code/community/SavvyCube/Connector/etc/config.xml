<config>
    <modules>
        <SavvyCube_Connector>
            <version>2.0.7</version>
        </SavvyCube_Connector>
    </modules>
    <global>
        <models>
            <wCube>
                <class>SavvyCube_Connector_Model</class>
                <resourceModel>wCube_resource</resourceModel>
            </wCube>
            <wCube_resource>
                <class>SavvyCube_Connector_Model_Resource</class>
                <entities>
                    <nonce>
                        <table>savvycube_nonce</table>
                    </nonce>
                    <session>
                        <table>savvycube_session</table>
                    </session>
                </entities>
            </wCube_resource>
        </models>
        <blocks>
            <wCube>
                <class>SavvyCube_Connector_Block</class>
            </wCube>
        </blocks>
        <helpers>
            <wCube>
                <class>SavvyCube_Connector_Helper</class>
            </wCube>
        </helpers>
        <resources>
            <wCube_setup>
                <setup>
                    <module>SavvyCube_Connector</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </wCube_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <wCube before="Mage_Adminhtml">SavvyCube_Connector</wCube>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <layout>
            <updates>
                <wCube>
                    <file>wCube/layout.xml</file>
                </wCube>
            </updates>
        </layout>
        <routers>
            <savvycube>
                <use>standard</use>
                <args>
                    <module>SavvyCube_Connector</module>
                    <frontName>savvycube</frontName>
                </args>
            </savvycube>
        </routers>
    </frontend>
    <default>
        <w_cube>
            <settings>
                 <priv backend_model="adminhtml/system_config_backend_encrypted" />
                 <savvy_url><![CDATA[https://app.savvycube.com/]]></savvy_url>
            </settings>
        </w_cube>
    </default>
</config>
